doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Open+Sans:400,400italic,700|Exo+2:400,700')
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
          nav.main-nav
            block nav
              ul 
                li.menu-title.submenu PRODUCTEN
                  ul.submenu-list
                    li.submenu-title First Software
                    li.submenu-item First Manager
                    li.submenu-item First Jaarrekeningen
                    li.submenu-item First Belastingaangifte
                    li.submenu-title Andere Software
                    li.submenu-item Jurisquare
                    li.submenu-item ContrAkten
                li.menu-title OVER ONS
                li.menu-title NIEUWS
                li.menu-title.submenu SUPPORT
                  ul.submenu-list
                    li.submenu-title 
                    li.submenu-item
                li.menu-title CONTACT
                li.menu-icon: i.fa.fa-cart
                li.menu-title.pull-right.submenu NL
                  ul.submenu-list
                    li.submenu-item FR
                    li.submenu-item EN
                    li.submenu-item NL
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
